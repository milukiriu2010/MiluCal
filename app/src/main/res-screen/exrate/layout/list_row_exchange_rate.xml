<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dataCurrencyCompSymbol"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" tools:text="USD" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/dataCurrencyCompRate"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/dataCurrencyCompDesc"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dataCurrencyCompRate"
            app:layout_constraintStart_toEndOf="@+id/dataCurrencyCompSymbol" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" tools:text="1.0" android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/dataCurrencyCompSymbol"
            app:layout_constraintBottom_toBottomOf="@+id/dataCurrencyCompSymbol"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dataCurrencyCompDesc"
            tools:text="United States Dollar" android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/svg_more"
            android:id="@+id/imageViewMore"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/dataCurrencyCompRate"
            app:layout_constraintBottom_toBottomOf="@+id/dataCurrencyCompRate"/>
</android.support.constraint.ConstraintLayout>