<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".gui.misc.ConfFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/label_tax1" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:id="@+id/labelTax1"/>
    <TextView
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dataTax1" app:layout_constraintStart_toEndOf="@+id/labelTax1"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/labelTax1" app:layout_constraintBottom_toBottomOf="@+id/labelTax1"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarTax1" app:layout_constraintStart_toEndOf="@+id/dataTax1"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/dataTax1" app:layout_constraintBottom_toBottomOf="@+id/dataTax1"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0" android:max="30"
            android:progress="8"/>
    <TextView
            android:text="@string/label_tax2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelTax2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/labelTax1"
            app:layout_constraintEnd_toEndOf="@+id/labelTax1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dataTax2"
            app:layout_constraintStart_toEndOf="@+id/labelTax2"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/labelTax2" app:layout_constraintBottom_toBottomOf="@+id/labelTax2"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarTax2"
            app:layout_constraintStart_toEndOf="@+id/dataTax2"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/dataTax2" app:layout_constraintBottom_toBottomOf="@+id/dataTax2"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0" android:progress="10"
            android:max="30"/>
    <TextView
            android:text="@string/label_logx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/labelLogx"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/labelTax2" app:layout_constraintEnd_toEndOf="@+id/labelTax2"
            app:layout_constraintStart_toStartOf="@+id/labelTax2"
    />
    <TextView
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dataLogx"
            app:layout_constraintTop_toTopOf="@+id/labelLogx" app:layout_constraintBottom_toBottomOf="@+id/labelLogx"
            app:layout_constraintStart_toEndOf="@+id/labelLogx" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarLogx"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/dataLogx" app:layout_constraintBottom_toBottomOf="@+id/dataLogx"
            app:layout_constraintStart_toEndOf="@+id/dataLogx" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:max="14" android:progress="0"/>
    <TextView
            android:text="@string/label_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelVoice" app:layout_constraintStart_toStartOf="@+id/labelLogx"
            android:visibility="invisible"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/labelScreenOn"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/spinVoice"
            app:layout_constraintStart_toEndOf="@+id/labelVoice" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/labelVoice" android:visibility="invisible"
            android:layout_marginTop="12dp" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="@string/action_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnOK"
            app:layout_constraintTop_toTopOf="@+id/btnDefault" app:layout_constraintBottom_toBottomOf="@+id/btnDefault"
            app:layout_constraintStart_toEndOf="@+id/btnDefault" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnCancel" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="@string/action_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancel"
            app:layout_constraintTop_toTopOf="@+id/btnOK" app:layout_constraintBottom_toBottomOf="@+id/btnOK"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/btnOK" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5" android:textAllCaps="false"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="@string/action_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDefault" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/spinVoice" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnOK" android:textAllCaps="false"/>
    <TextView
            android:text="@string/label_number_of_decimal_places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelNumDecimalPlaces" app:layout_constraintStart_toStartOf="@+id/labelLogx"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/labelLogx"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dataNumDecimalPlaces" app:layout_constraintStart_toEndOf="@+id/labelNumDecimalPlaces"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/labelNumDecimalPlaces"
            app:layout_constraintBottom_toBottomOf="@+id/labelNumDecimalPlaces" tools:text="10"/>
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="9"
            android:id="@+id/seekBarNumDecimalPlaces"
            app:layout_constraintStart_toEndOf="@+id/dataNumDecimalPlaces" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/labelNumDecimalPlaces"
            app:layout_constraintBottom_toBottomOf="@+id/labelNumDecimalPlaces" android:progress="9"/>
    <TextView
            android:text="@string/label_screen_on"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/labelScreenOn"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/labelNumDecimalPlaces"
            app:layout_constraintStart_toStartOf="@+id/labelNumDecimalPlaces"
            app:layout_constraintEnd_toEndOf="@+id/dataNumDecimalPlaces"
    />
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchScreenOn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/labelScreenOn"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/labelScreenOn"
            app:layout_constraintBottom_toBottomOf="@+id/labelScreenOn" app:layout_constraintHorizontal_bias="1.0"/>

</android.support.constraint.ConstraintLayout>